#include <iostream>
using namespace std;
double k(int a, int b, int c) {
    return (a + b + c) / 3.0;
}
int main() {
    int a, b, c;
    cout << "Ededleri daxil et: ";
    cin >> a >> b >> c;
    double ortalama = k(a, b, c);
    cout << "Ededlerin ortalamasi = " << ortalama << endl;
    return 0;
}
