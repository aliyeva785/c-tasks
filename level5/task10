#include <iostream>
using namespace std;
struct Statistik {
    int minimum;
    int maksimum;
    double ortalama;
};
Statistik ss(int N) {
    int x;
    cin >> x;
    int mn = x, mx = x;
    long long sum = x;

    for (int i = 1; i < N; i++) {
        cin >> x;
        if (x < mn) mn = x;
        if (x > mx) mx = x;
        sum += x;
    }

    Statistik s;
    s.minimum = mn;
    s.maksimum = mx;
    s.ortalama = (double)sum / N;
    return s;
}
int main() {
    int N;
    cout << "Ededlerin sayini daxil et: ";
    cin >> N;
    cout << "Ededleri daxil et: ";
    Statistik s = ss(N);
    cout << "Minimum: " << s.minimum << endl;
    cout << "Maksimum: " << s.maksimum << endl;
    cout << "Ortalama: " << s.ortalama << endl;
    return 0;
}
